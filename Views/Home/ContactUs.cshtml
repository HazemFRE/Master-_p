@model Contact

@section Styles {
    <link rel="stylesheet" href="~/style/ContactUs.css">
    <style>
        .contact-form-container {
            max-width: 745px !important;
            margin: 0 auto;
            padding: 2rem;
            background: var(--light-bg);
            border-radius: 10px;
        }

        form {
            width: 100%;
            max-width: 668px;
        }
    </style>
}
<body>
    <main class="contact-container">
        <section class="contact-hero">
            <h1>تواصل معنا</h1>
            <p>نحن هنا للإجابة على استفساراتكم ومساعدتكم في كل ما تحتاجون</p>
        </section>

        <section class="contact-content">
            <div class="contact-info">
                <div class="info-card">
                    <i class="fas fa-phone"></i>
                    <h3>اتصل بنا</h3>
                    <p>0776294775</p>
                    <p>متوفرون من السبت إلى الخميس</p>
                    <p>9:00 ص - 5:00 م</p>
                </div>

                <div class="info-card">
                    <i class="fas fa-envelope"></i>
                    <h3>راسلنا</h3>
                    <p>Hfrehat105@gmail.com</p>
                    <p>نرد خلال 24 ساعة</p>
                </div>

                <div class="info-card">
                    <i class="fas fa-map-marker-alt"></i>
                    <h3>موقعنا</h3>
                    <p>عمان، الأردن</p>
                    <p>شارع المدينة المنورة</p>
                </div>
            </div>

            <div class="contact-form-container">
                <form method="post" asp-action="ContactUs" asp-controller="Home">
                    <div class="form-header">
                        <h2>أرسل رسالتك</h2>
                        <p>سنقوم بالرد عليك في أقرب وقت ممكن</p>
                    </div>

                    <div class="form-group">
                        <label for="name">الاسم الكامل</label>
                        <input type="text" id="name" asp-for="Name" required>
                    </div>

                    <div class="form-group">
                        <label for="email">البريد الإلكتروني</label>
                        <input type="email" id="email" asp-for="Email" required>
                    </div>

                    <div class="form-group">
                        <label for="subject">الموضوع</label>
                        <select id="subject" asp-for="Subject" name="subject" required>
                            <option value="">اختر الموضوع</option>
                            <option value="inquiry">استفسار عام</option>
                            <option value="order">استفسار عن طلب</option>
                            <option value="complaint">شكوى</option>
                            <option value="suggestion">اقتراح</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="message">الرسالة</label>
                        <textarea id="message" asp-for="Message" rows="5" required></textarea>
                    </div>

                    <!-- الزر الخاص بالإرسال -->
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-paper-plane"></i>
                        إرسال الرسالة
                    </button>
                </form>
            </div>
        </section>

        <section class="faq-section">
            <h2>الأسئلة الشائعة</h2>
            <div class="faq-container">
                <div class="faq-item">
                    <div class="faq-question">
                        <h3>كيف يمكنني تتبع طلبي؟</h3>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="faq-answer">
                        <p>يمكنك تتبع طلبك من خلال رقم التتبع الذي تم إرساله إلى بريدك الإلكتروني.</p>
                    </div>
                </div>
                <!-- المزيد من الأسئلة الشائعة -->
            </div>
        </section>
    </main>

    @section Scripts {
        <script src="~/js/contact.js"></script>
        <script src="~/js/footer.js"></script>
    }
</body>
