    <title>@ViewData["Title"] - HazemMaster</title>
    <title>زيت الزيتون بالنكهات - قطرة نقاء</title>
	<link rel="stylesheet" href="~/style/home.css">
	<link href="~/style/antiques.css" rel="stylesheet" />
	<link href="~/style/aboutus.css" rel="stylesheet" />
	<link href="~/style/blog.css" rel="stylesheet" />
	<link href="~/style/cart.css" rel="stylesheet" />
	<link href="~/style/contactus.css" rel="stylesheet" />
	<link href="~/style/farm-consulting.css" rel="stylesheet" />
	<link href="~/style/home3.css" rel="stylesheet" />
