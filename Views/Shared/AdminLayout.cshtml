<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    @if (IsSectionDefined("Styles"))
{
    @RenderSection("Styles", required: false)
}
else
{
    <!-- يمكنك وضع أنماط افتراضية هنا إذا أردت -->
}
    <title>إدارة العملاء - لوحة التحكم</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>لوحة التحكم | زيت الزيتون</title>
    @* <link rel="stylesheet" href="~/css/admin-dashboard.css"> *@
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;500;600;700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
 <style >
        /* قاعدة عامة */
        body {
            margin: 0;
            font-family: 'Cairo', sans-serif;
            background-color: #f4f6f9;
        }

        /* الحاوية الأساسية */
        .admin-container {
            display: flex;
            min-height: 100vh;
        }

        /* الشريط الجانبي */
        .sidebar {
            width: 250px;
            background: linear-gradient(135deg, #2c3e50, #34495e);
            color: #ffffff;
            display: flex;
            flex-direction: column;
            /* justify-content: space-between; */
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

        .sidebar-header {
            text-align: center;
            padding: 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

            .sidebar-header h2 {
                margin: 0;
                font-size: 24px;
                font-weight: bold;
            }

        .sidebar-nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-nav li {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

            .sidebar-nav li a {
                display: flex;
                align-items: center;
                padding: 15px 20px;
                color: #ecf0f1;
                text-decoration: none;
                transition: background 0.3s, color 0.3s;
                font-size: 18px;
            }

                .sidebar-nav li a i {
                    margin-right: 10px;
                    font-size: 20px;
                }

            .sidebar-nav li:hover a,
            .sidebar-nav li.active a {
                background-color: rgba(255, 255, 255, 0.1);
                color: #ffd700;
            }

        /* الفوتر في القائمة */
        .sidebar-footer {
            padding: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            text-align: center;
        }

            .sidebar-footer a {
                color: #ecf0f1;
                font-size: 18px;
                text-decoration: none;
                display: flex;
                justify-content: center;
                align-items: center;
            }

                .sidebar-footer a i {
                    margin-right: 8px;
                }

        /* محتوى الصفحة */
        main {
            flex: 1;
            padding: 30px;
            background-color: #f4f6f9;
        }

        /* لمسة إضافية للأزرار أو العناصر التفاعلية */
        button, a.button {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover, a.button:hover {
                background-color: #2980b9;
            }

        /* تحكم بالآيقونات لتكون مناسبة مع RTL */
        .sidebar-nav li a i {
            margin-left: 10px;
            margin-right: 0;
        }

 </style>
</head>
    

<body>
    <div class="admin-container">
        <!-- القائمة الجانبية -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>لوحة التحكم</h2>
            </div>

            <nav class="sidebar-nav">
                <ul>
                    <li>
                        <a asp-controller="Admin" asp-action="AdminDashboard">
                            <i class="fas fa-home"></i>
                            الرئيسية
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="AdminProducts">
                            <i class="fas fa-box"></i>
                            المنتجات
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="AdminOrders">
                            <i class="fas fa-shopping-cart"></i>
                            الطلبات
                        </a>
                    </li>
                    <li class="active">
                        <a asp-controller="Admin" asp-action="AdminCustomers">
                            <i class="fas fa-users"></i>
                            العملاء
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="AdminCategories">
                            <i class="fas fa-tags"></i>
                            التصنيفات
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="AdminReviews">
                            <i class="fas fa-star"></i>
                            التقييمات
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="Users">
                            <i class="fas fa-user"></i>
                            المستخدمين
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="sidebar-footer">
                <a asp-controller="User" asp-action="Login" id="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    تسجيل الخروج
                </a>
            </div>
        </aside>

        @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="js/admin-dashboard.js"></script>
    <script src="js/admin-customers.js"></script>
</body>


</html>