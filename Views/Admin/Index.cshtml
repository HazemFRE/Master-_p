                        </button>
                        <button class="action-btn edit" title="تعديل">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn delete" title="حذف">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- الإجراءات الجماعية -->
    <div class="bulk-actions">
        <select id="bulk-action">
            <option value="">إجراء جماعي</option>
            <option value="activate">تفعيل</option>
            <option value="deactivate">تعطيل</option>
            <option value="block">حظر</option>
            <option value="delete">حذف</option>
        </select>
        <button id="apply-bulk-action" class="secondary-btn">تطبيق</button>
    </div>

    <!-- الترقيم -->
    <div class="pagination">
        <button class="page-btn" disabled>
            <i class="fas fa-chevron-right"></i>
        </button>
        <button class="page-btn active">1</button>
        <button class="page-btn">2</button>
        <button class="page-btn">3</button>
        <button class="page-btn">
            <i class="fas fa-chevron-left"></i>
        </button>
    </div>
</main>