@{
    Layout = "AdminLayout";
}
  @section styles {
    <link rel="stylesheet" href="~/style/AdminProducts.css">
    }

<!-- Main Content -->
<main class="admin-main">
    <!-- Top Header -->
    <header class="admin-header">
        <div class="header-search">
            <input type="text" placeholder="بحث عن منتج...">
            <button><i class="fas fa-search"></i></button>
        </div>
        <div class="header-actions">
            <div class="notifications">
                <i class="fas fa-bell"></i>
                <span class="badge">3</span>
            </div>
            <div class="admin-profile">
                <img src="images/avatars/admin.jpg" alt="صورة المشرف">
                <div class="profile-info">
                    <span class="admin-name">المشرف</span>
                    <span class="admin-role">مدير النظام</span>
                </div>
            </div>
        </div>
    </header>

    <!-- Products Content -->
    <div class="admin-content">
        <div class="content-header">
            <h1>إدارة المنتجات</h1>
            <button class="primary-btn" id="add-product-btn">
                <i class="fas fa-plus"></i>
                إضافة منتج جديد
            </button>
        </div>

        <!-- Filters Section -->
        <div class="filters-section">
            <div class="filter-group">
                <label for="category-filter">التصنيف:</label>
                <select id="category-filter">
                    <option value="">الكل</option>
                    <option value="olive-oil">زيت زيتون</option>
                    <option value="honey">عسل</option>
                    <option value="tea">شاي</option>
                    <option value="soap">صابون</option>
                </select>
            </div>
            <div class="filter-group">
                <label for="status-filter">الحالة:</label>
                <select id="status-filter">
                    <option value="">الكل</option>
                    <option value="in-stock">متوفر</option>
                    <option value="out-of-stock">نفذ المخزون</option>
                    <option value="low-stock">مخزون منخفض</option>
                </select>
            </div>
            <div class="filter-group">
                <label for="sort-by">ترتيب حسب:</label>
                <select id="sort-by">
                    <option value="name-asc">الاسم (أ-ي)</option>
                    <option value="name-desc">الاسم (ي-أ)</option>
                    <option value="price-asc">السعر (من الأقل)</option>
                    <option value="price-desc">السعر (من الأعلى)</option>
                    <option value="stock-asc">المخزون (من الأقل)</option>
                    <option value="stock-desc">المخزون (من الأعلى)</option>
                </select>
            </div>
        </div>

        <!-- Products Table -->
        <div class="table-responsive">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="select-all">
                        </th>
                        <th>الصورة</th>
                        <th>اسم المنتج</th>
                        <th>التصنيف</th>
                        <th>السعر</th>
                        <th>المخزون</th>
                        <th>الحالة</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input type="checkbox" class="product-select">
                        </td>
                        <td>
                            <img src="images/products/olive-oil.jpg" alt="زيت زيتون" class="product-thumbnail">
                        </td>
                        <td>زيت زيتون بكر ممتاز</td>
                        <td>زيت زيتون</td>
                        <td>180 ريال</td>
                        <td>25</td>
                        <td><span class="status in-stock">متوفر</span></td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn view" title="عرض"><i class="fas fa-eye"></i></button>
                                <button class="action-btn edit" title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="action-btn delete" title="حذف">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="checkbox" class="product-select">
                        </td>
                        <td>
                            <img src="images/products/olive-honey.jpg" alt="عسل بالزيتون"
                                 class="product-thumbnail">
                        </td>
                        <td>عسل بالزيتون</td>
                        <td>عسل</td>
                        <td>180 ريال</td>
                        <td>15</td>
                        <td><span class="status low-stock">مخزون منخفض</span></td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn view" title="عرض"><i class="fas fa-eye"></i></button>
                                <button class="action-btn edit" title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="action-btn delete" title="حذف">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="checkbox" class="product-select">
                        </td>
                        <td>
                            <img src="images/products/olive-leaf-tea.jpg" alt="شاي أوراق زيتون"
                                 class="product-thumbnail">
                        </td>
                        <td>شاي أوراق الزيتون</td>
                        <td>شاي</td>
                        <td>120 ريال</td>
                        <td>0</td>
                        <td><span class="status out-of-stock">نفذ المخزون</span></td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn view" title="عرض"><i class="fas fa-eye"></i></button>
                                <button class="action-btn edit" title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="action-btn delete" title="حذف">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="checkbox" class="product-select">
                        </td>
                        <td>
                            <img src="images/products/olive-soap.jpg" alt="صابون زيتون"
                                 class="product-thumbnail">
                        </td>
                        <td>صابون زيتون طبيعي</td>
                        <td>صابون</td>
                        <td>45 ريال</td>
                        <td>30</td>
                        <td><span class="status in-stock">متوفر</span></td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn view" title="عرض"><i class="fas fa-eye"></i></button>
                                <button class="action-btn edit" title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="action-btn delete" title="حذف">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Bulk Actions -->
        <div class="bulk-actions">
            <select id="bulk-action">
                <option value="">إجراءات جماعية</option>
                <option value="delete">حذف المحدد</option>
                <option value="in-stock">تحديد كمتوفر</option>
                <option value="out-of-stock">تحديد كنفذ المخزون</option>
            </select>
            <button class="secondary-btn" id="apply-bulk-action">تطبيق</button>
        </div>

        <!-- Pagination -->
        <div class="pagination">
            <button class="pagination-btn"><i class="fas fa-chevron-right"></i></button>
            <button class="pagination-btn active">1</button>
            <button class="pagination-btn">2</button>
            <button class="pagination-btn">3</button>
            <button class="pagination-btn"><i class="fas fa-chevron-left"></i></button>
        </div>
    </div>
</main>
    </div>

<!-- Add/Edit Product Modal -->
<div class="modal" id="product-modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>إضافة منتج جديد</h2>
            <button class="close-modal"><i class="fas fa-times"></i></button>
        </div>
        <div class="modal-body">
            <form id="product-form">
                <div class="form-group">
                    <label for="product-name">اسم المنتج</label>
                    <input type="text" id="product-name" required>
                </div>
                <div class="form-group">
                    <label for="product-category">التصنيف</label>
                    <select id="product-category" required>
                        <option value="">اختر التصنيف</option>
                        <option value="olive-oil">زيت زيتون</option>
                        <option value="honey">عسل</option>
                        <option value="tea">شاي</option>
                        <option value="soap">صابون</option>
                    </select>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="product-price">السعر</label>
                        <input type="number" id="product-price" min="0" step="0.01" required>
                    </div>
                    <div class="form-group">
                        <label for="product-stock">المخزون</label>
                        <input type="number" id="product-stock" min="0" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="product-description">الوصف</label>
                    <textarea id="product-description" rows="4" required></textarea>
                </div>
                <div class="form-group">
                    <label>الصور</label>
                    <div class="image-upload-container">
                        <div class="image-upload-box">
                            <input type="file" id="product-images" multiple accept="image/*">
                            <div class="upload-placeholder">
                                <i class="fas fa-cloud-upload-alt"></i>
                                <p>اسحب الصور هنا أو انقر للاختيار</p>
                            </div>
                        </div>
                        <div class="image-preview-container"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label>المميزات</label>
                    <div class="features-container">
                        <div class="feature-item">
                            <input type="text" placeholder="أضف ميزة">
                            <button type="button" class="add-feature"><i class="fas fa-plus"></i></button>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>الفوائد</label>
                    <div class="benefits-container">
                        <div class="benefit-item">
                            <input type="text" placeholder="أضف فائدة">
                            <button type="button" class="add-benefit"><i class="fas fa-plus"></i></button>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="product-usage">طريقة الاستخدام</label>
                    <textarea id="product-usage" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="product-warnings">تحذيرات</label>
                    <textarea id="product-warnings" rows="3"></textarea>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="secondary-btn close-modal">إلغاء</button>
            <button class="primary-btn" id="save-product">حفظ</button>
        </div>
    </div>
</div>

