@model Master__p.Models.Categorie

@{
    Layout = "AdminLayout";
}

@section styles {
    <style>
        .form-container {
            /* max-width: 600px; */
            margin: 40px 200px;
            background: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 128, 0, 0.2);
			width: 100%;
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #4f7942;
            font-weight: bold;
        }

        .form-group label {
            color: #2e5e4e;
            font-weight: 600;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-top: 8px;
            margin-bottom: 20px;
            border: 1px solid #cde0d3;
            border-radius: 8px;
        }

        .btn-primary {
            background-color: #4f7942;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #3a5d31;
            }
    </style>
}

<div class="form-container">
    <h2>إضافة تصنيف جديد</h2>

    <form asp-action="AddCategory" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Name">اسم التصنيف</label>
            <input asp-for="Name" class="form-control" placeholder="ادخل اسم التصنيف" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">الوصف</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="اكتب وصف للتصنيف"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div style="text-align: center;">
            <button type="submit" class="btn btn-primary">حفظ التصنيف</button>
        </div>
    </form>
</div>